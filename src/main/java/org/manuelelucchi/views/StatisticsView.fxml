<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.manuelelucchi.controllers.StatisticsController">
   
   <Label text="Statistics" 
      alignment="CENTER"
      AnchorPane.topAnchor = "20.0"
      AnchorPane.leftAnchor = "0.0"
      AnchorPane.rightAnchor = "0.0">
      <font>
         <Font size="40.0"/>
      </font>
   </Label>

   <VBox alignment="CENTER"
      AnchorPane.leftAnchor = "0.0"
      AnchorPane.rightAnchor = "0.0"
      AnchorPane.topAnchor = "0.0"
      AnchorPane.bottomAnchor = "0.0">
      <children>
         <Label fx:id="meanBike"/>
         <Label fx:id="maxTotem"/>
         <Label fx:id="maxTime"/>
      </children>
   </VBox>

   <Button text="Back" 
      onAction="#back"
      AnchorPane.topAnchor = "20.0"
      AnchorPane.leftAnchor = "20.0"/>
</AnchorPane>