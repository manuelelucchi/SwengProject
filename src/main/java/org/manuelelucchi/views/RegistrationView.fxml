<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.manuelelucchi.controllers.RegistrationController">
   <children>
      <Label text="Report"
         alignment="CENTER"
         AnchorPane.leftAnchor="0.0"
         AnchorPane.rightAnchor="0.0"
         AnchorPane.topAnchor="20.0">
         <font>
            <Font size="40.0"/>
         </font>
      </Label>
      <VBox AnchorPane.leftAnchor="0.0"
         AnchorPane.rightAnchor="0.0"
         AnchorPane.topAnchor="0.0"
         AnchorPane.bottomAnchor="0.0"
         spacing="10.0"
         alignment="CENTER">
         <GridPane alignment="CENTER">
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="10.0">
               <Label text="Insert Password" />
               <PasswordField fx:id="passwordField"/>
               <padding>
                  <Insets bottom="20.0" left="0.0" right="20.0" top="0.0" />
               </padding>
            </VBox>
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="10.0">
               <Label text="Select the subscription type"/>
               <HBox alignment="CENTER" spacing="10.0">
                  <children>
                     <Label text="Day"/>
                     <CheckBox fx:id="dayBox"/>
                     <Label text="Week"/>
                     <CheckBox fx:id="weekBox"/>
                     <Label text="Year"/>
                     <CheckBox fx:id="yearBox"/>
                  </children>
               </HBox>                    
               <padding>
                  <Insets bottom="20.0" left="0.0" right="0.0" top="0.0" />
               </padding>
            </VBox>
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="10.0">
               <Label text="Insert a valid Card Code"/>
               <TextField fx:id="codeField"/>
               <padding>
                  <Insets bottom="0.0" left="0.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="10.0">
               <Label text="Insert the card expiration Date"/>
               <DatePicker fx:id="expireDatePicker"/>
               <padding>
                  <Insets bottom="0.0" left="0.0" right="0.0" top="20.0" />
               </padding>
            </VBox>
         </GridPane>      
         <HBox spacing="10.0" alignment="CENTER">
            <Label text="Are you a student?"/>
            <CheckBox fx:id="studentBox"/>
         </HBox> 
         <Button fx:id="registerButton" text="Register" onAction="#register"/>
      </VBox>

      <Button text="Back" 
         onAction="#back"
         AnchorPane.topAnchor = "20.0"
         AnchorPane.leftAnchor = "20.0"/>
   </children>
</AnchorPane>
