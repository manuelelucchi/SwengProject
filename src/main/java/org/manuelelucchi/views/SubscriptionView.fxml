<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.geometry.Insets?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.manuelelucchi.controllers.SubscriptionController">
   <children>    
        <Label text="Card Code"/>
        <TextField/>
        <Label text="Expire Date"/>
        <DatePicker/>
        <Button fx:id="dayButton" text="Day" onAction="#day"/>
        <Button fx:id="weekButton" text="Week" onAction="#week"/>
        <Button fx:id="yearButton" text="Year" onAction="#year"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
